<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="output" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="135" editable="false" alignment="BOTTOM_RIGHT"/>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
        <Button text="7" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="8" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="9" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="/" prefWidth="30" onAction="#operationPressed" style="-fx-background-color: #FDE910"/>
    </HBox>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" spacing="5">
        <Button text="4" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="5" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="6" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="x" prefWidth="30" onAction="#operationPressed" style="-fx-background-color: #FDE910"/>
    </HBox>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="3" spacing="5">
        <Button text="1" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="2" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="3" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="-" prefWidth="30" onAction="#operationPressed" style="-fx-background-color: #FDE910"/>
    </HBox>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="4" spacing="5">
        <Button text="0" prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="." prefWidth="30" onAction="#numpadPressed" style="-fx-background-color: #30D5C8"/>
        <Button text="=" prefWidth="30" onAction="#calculate" style="-fx-background-color: #FF0000"/>
        <Button text="+" prefWidth="30" onAction="#operationPressed" style="-fx-background-color: #FDE910"/>
    </HBox>
</GridPane>